!!!
%html
  %head
    %link{href: '/images/favicon.ico', rel: 'icon'}
    %link{href: '/css/style.css',      rel: 'stylesheet'}
    %script{src: 'http://code.jquery.com/jquery-2.1.0.min.js'}
    %script{src: 'http://timeago.yarp.com/jquery.timeago.js'}
    %script{src: 'https://raw.github.com/Arwid/jQuery.scrollIntoView/master/jquery.scrollIntoView.min.js'}
    %script{src: '/js/script.js'}
    %title
      alexherbo2.github.io — $title$
  %body
    %header
      %div.top.left
        = (link_to 'home', '/', :id => 'home'                                                     ) + |
          (link_to '(☊)', 'http://mawww.uni.cx:8000', { :title => 'Open Music', :class => 'raw' } )   |
      %div.top.right
        :coffee
          $('<iframe>', { src               : '//api.flattr.com/button/view/?button=compact&uid=alexherbo2&url='+document.URL , \
                          title             : 'Flattr'                                                                        , \
                          height            :  20                                                                             , \
                          width             : 110                                                                             , \
                        }).css(borderWidth:0).prependTo $('div.top.right')
        %a.timeago{href: 'https://github.com/alexherbo2/alexherbo2.github.io/commit/$commit$', title: 'View Commit'}
          %time.timeago{datetime: '$commit-iso-date$'}
        %a.raw{href: 'https://raw.github.com/alexherbo2/alexherbo2.github.io/source/content/$path$', title: 'View Raw'}
          ❮❯
        %h1#title
          =link_to 'alexherbo2.github.io', 'https://github.com/alexherbo2/alexherbo2.github.io'
          —
          =link_to '$title$', 'https://github.com/alexherbo2/alexherbo2.github.io/blob/source/content/$path$'

        %a.raw{href: 'https://github.com/alexherbo2/alexherbo2.github.io/edit/source/content/$path$', title: 'Edit Page'}
          
    $body$
    %footer
      %div.bottom.left
        %a{href: 'http://github.com/alexherbo2/alexherbo2.github.io'}
          GitHub
